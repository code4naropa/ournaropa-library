<div id="library" class="index container">
  <div class="row">
    <div class="valign-wrapper">
      <%= form_tag search_path, :method => :get, :class => "col s12 valign" do %>

        <div class="row">
          <h1 class="center-align">OurNaropa Library Search</h1>
        </div>

        <div class="row">
          <div class="input-field col s10">
            <i class="material-icons prefix">search</i>
              <%= text_field_tag(:query, @query, :class => "validate", :type => "text") %>
              <%= label_tag :query, "What are you looking for today...?" %>
          </div>
          <div class="col s2">
            <button type="submit" class="waves-effect waves-light btn-large">Search</button>
          </div>
        </div>
        <%= label_tag(:query, "Search for:") %>
        <%= check_box_tag :naropa, 'true', @search_naropa %>
        <%= label_tag(:naropa, "Naropa Libraries") %> 
        <%= check_box_tag :cu, 'true', @search_cu %>
        <%= label_tag(:cu, "CU Libraries") %> 
        <%= check_box_tag :bpl, 'true', @search_bpl %>
        <%= label_tag(:bpl, "Boulder Public Library") %>
      <% end %>
    </div>
  </div>

</div>