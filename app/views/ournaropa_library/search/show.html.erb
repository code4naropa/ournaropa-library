<%= form_tag search_path, :method => :get do %>
  <%= label_tag(:query, "Search for:") %>
  <%= text_field_tag(:query, @query, :placeholder => "What are you looking for today...?") %>
  <%= check_box_tag :naropa, 'true', @search_naropa %>
  <%= label_tag(:naropa, "Naropa Libraries") %> 
  <%= check_box_tag :cu, 'true', @search_cu %>
  <%= label_tag(:cu, "CU Libraries") %> 
  <%= check_box_tag :bpl, 'true', @search_bpl %>
  <%= label_tag(:bpl, "Boulder Public Library") %>
  <%= submit_tag("Search") %>
<% end %>


<div id="results">
  <% for i in 0..num_results_per_source - 1 do %>
    <div class="result result-naropa empty">
    </div>
    <div class="result result-cu empty">
    </div>
    <div class="result result-bpl empty">
    </div>
  <% end %>
  
    <div class="result result-naropa more">
    </div>
    <div class="result result-cu more">
    </div>
    <div class="result result-bpl more">
    </div>  
  
</div>

<script type="text/javascript">  
  
  // search Naropa
  <% if @search_naropa %>
    $(".result-naropa").first().html("Loading");
    $.ajax({
      type: "GET",
      url: '<%= fetch_results_path "naropa", @query %>',
      dataType: "script"
    });
  <% end %>
  
  // search CU
  <% if @search_cu %>
    $(".result-cu").first().html("Loading");
    $.ajax({
      type: "GET",
      url: '<%= fetch_results_path "cu", @query %>',
      dataType: "script"
    });
  <% end %>
  
  // search BPL
  <% if @search_bpl %>
    $(".result-bpl").first().html("Loading");
    $.ajax({
      type: "GET",
      url: '<%= fetch_results_path "bpl", @query %>',
      dataType: "script"
    });
  <% end %>
</script>